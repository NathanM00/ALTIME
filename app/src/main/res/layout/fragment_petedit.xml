<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/backgroundGris">

    <ImageButton
        android:id="@+id/btn_petEditAtras"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/backgroundGris"
        app:srcCompat="@drawable/atras" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_petEditAtras"
        android:layout_centerHorizontal="true"
        android:text="Viste un poco a Franckie!"
        android:textColor="#b3b3b3"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_objeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Ninguno"
        android:textColor="#212121"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/iv_franckieEdit"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:src="@drawable/mascota_petedit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical">
            

            <ImageButton
                android:id="@+id/btn_brerrow"
                android:layout_width="79dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_brerrow"
                android:elevation="8dp"
                android:src="@drawable/cap" />

            <ImageButton
                android:id="@+id/btn_bloq1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignStart="@+id/btn_brerrow"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignStart="@+id/btn_bloq2"
                android:layout_centerVertical="true"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btn_brerrow"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

            <ImageButton
                android:id="@+id/btn_bloq8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btn_bloq2"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn_bloqueado"
                android:elevation="8dp"
                android:src="@drawable/bloqueado" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>