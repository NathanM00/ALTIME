<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/tv_diaNoticia1"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto_bold"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_numeroNoticia1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_numeroNoticia1"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/roboto_bold"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_diaNoticia1" />

    <TextView
        android:id="@+id/tv_contenidoNoticia1"
        android:layout_width="231dp"
        android:layout_height="53dp"
        android:layout_marginStart="36dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_numeroNoticia1"
        app:layout_constraintStart_toEndOf="@+id/tv_diaNoticia1"
        app:layout_constraintTop_toTopOf="@+id/tv_numeroNoticia1" />
</android.support.constraint.ConstraintLayout>